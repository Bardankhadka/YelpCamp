<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col">
                <h1 class="text-center">Edit Campground</h1>
                <div class="mx-auto mt-5" style="width: 40%;">
                    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="campground[name]" value="<%=campground.name %>">
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div id="price" class=col>
                                    $
                                </div>
                                <div class="col-11">
                                    <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="10" step="10">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="campground[image]" value="<%=campground.img %>">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="campground[description]" value="<%=campground.description %>">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                    </form>
                    <a href="/campgrounds">Go Back</a>
                </div>
        </div>
    </div>
        
</div>

<% include ../partials/footer %>